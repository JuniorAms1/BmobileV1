{% extends 'base.html.twig' %}

{% block title %}B-mobile || Vos-enseignes{% endblock %}

{% block body %}

	<div class="main_slider_ext">
		
	


		<!-- Best Sellers -->

		<div class="best_sellers">
			<div class="container">
				<div class="row">
					<div class="col text-center">
						<div class="section_title new_arrivals_title">
							<h2>Bons Plans En vedettes</h2>
						</div>
					</div>
				</div>
				<div class="row">
					<div class="col">
						<div class="product_slider_container">
							<div class="owl-carousel owl-theme product_slider">
	
	
								<!-- Slide dynamique -->
								{% for best in best_enseignes %}	
								<div class="owl-item product_slider_item">
									<div class="product-item">
										<div class="product discount">
											<div class="product_image">
												<a href="{{ path('app_enseigne', {'slug' : best.slug}) }}">	<img src="/uploads/{{ best.logo }}" alt="{{ best.nom }}"></a>
											</div>
											<div class="favorite favorite_left"></div>
											<div class="product_bubble product_bubble_right product_bubble_red d-flex flex-column align-items-center"><span>-{{ best.remise * 100 }}%</span></div>
											<div class="product_info">
												<h6 class="product_name"><a href="{{ path('app_enseigne', {'slug' : best.slug}) }}">{{ best.nom }}</a></h6>
												{% if best.prixPublic != null %}
										
													<div class="row">
														<div class="col-6 remise">
															Prix remisé <div class="product_price">{{ (((best.prixPublic) - (best.prixPublic * best.remise)) / 100)|number_format(0,',','.') }}F Cfa</div>
														</div>
														<div class="col-6 public">
															Prix public<div class="product_price"><small><span>{{ (best.prixPublic / 100)|number_format(0,',','.') }}F Cfa</span></small></div>
														</div>
													</div>
													<div>
														<p>{{ best.ville }} - <i class="fa fa-map-pin"></i> <span>221 Sénégal</span></p>
													</div>
													{% else %}
													<div class="row">
														<div class="col-6 remise">
															Prix remisé <div class="product_price">-{{ best.remise * 100 }}%</div>
														</div>
														<div class="col-6 public">
															Prix public<div class=""><span class="text-secondary">Voir le menu</span></div>
														</div>
													</div>
														<div>
															<p>{{ best.ville }} - <i class="fa fa-map-pin"></i> <span>221 Sénégal</span></p>
														</div>
												{% endif %}
											</div>
										</div>
									</div>
								</div>
								{% endfor %}
								<!-- Slide 10 -->
	
	
							<!-- Slider Navigation -->
	
							<div class="product_slider_nav_left product_slider_nav d-flex align-items-center justify-content-center flex-column">
								<i class="fa fa-chevron-left" aria-hidden="true"></i>
							</div>
							<div class="product_slider_nav_right product_slider_nav d-flex align-items-center justify-content-center flex-column">
								<i class="fa fa-chevron-right" aria-hidden="true"></i>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	
	<!-- New Arrivals -->

	<div class="new_arrivals">
		<div class="container">
			<div class="row">
				<div class="col text-center">
					<div class="section_title new_arrivals_title">
						<h2>Vos Enseignes B-mobile</h2>
					</div>
				</div>
			</div>
			<div class="row align-items-center">
				<div class="col text-center mt-5">
					<!--<div class="new_arrivals_sorting">
						<ul class="arrivals_grid_sorting clearfix button-group filters-button-group">
							<li class="grid_sorting_button button d-flex flex-column justify-content-center align-items-center active is-checked" data-filter="*">{{ enseignes.getTotalItemCount }}</li>
						
						</ul>
					</div>-->
					{% if app.user %}
						{{ form_start(form) }}
						<div class="row">
							<div class="col-3">
								<a href="{{ path('app_enseignes') }}" class="btn btn-danger btn-block">Tous les enseignes</a>
							</div>
								<div class="col-6">{{ form_row(form.string) }}</div>
								<div class="col-3">{{ form_row(form.submit) }}</div>
						</div>
						{{ form_end(form) }}
					{% endif %}
						
						
				</div>
			</div>
			<div class="row">
				<div class="col">
					<div class="product-grid" data-isotope='{ "itemSelector": ".product-item", "layoutMode": "fitRows" }'>

						<!-- Product 1 -->
								{% for enseigne in enseignes %}	

						<div class="product-item">
							<div class="product discount product_filter">
								<div class="product_image">
									<a href="{{ path('app_enseigne', {'slug' : enseigne.slug}) }}">
										<img src="/uploads/{{ enseigne.logo }}" alt="{{ enseigne.nom }}">
									</a>
								</div>
								<div class="favorite favorite_left"></div>
								<div class="product_bubble product_bubble_right product_bubble_red d-flex flex-column align-items-center"><span>-{{ enseigne.remise * 100 }}%</span></div>
								<div class="product_info">
									<h5 class="product_name"><a href="{{ path('app_enseigne', {'slug' : enseigne.slug}) }}">{{ enseigne.nom }}</a></h5>
									{% if enseigne.prixPublic != null %}
										
										<div class="row">
											<div class="col-6 remise">
												Prix remisé <div class="product_price">{{ (((enseigne.prixPublic) - (enseigne.prixPublic * enseigne.remise)) / 100)|number_format(0,',','.') }}F Cfa</div>
											</div>
											<div class="col-6 public">
												Prix public<div class="product_price"><span>{{ (enseigne.prixPublic / 100)|number_format(0,',','.') }}F Cfa</span></div>
											</div>
									    </div>
										<div>
											<p>{{ enseigne.ville }} - <i class="fa fa-map-pin"></i> <span>221 Sénégal</span></p>
										</div>
										{% else %}
										<div class="row">
											<div class="col-6 remise">
												Prix remisé <div class="product_price">-{{ enseigne.remise * 100 }}%</div>
											</div>
											<div class="col-6 public">
												Prix public<div class=""><span class="text-secondary">Voir le menu</span></div>
											</div>
									    </div>
											<div>
												<p>{{ enseigne.ville }} - <i class="fa fa-map-pin"></i> <span>221 Sénégal</span></p>
											</div>
									{% endif %}
									
									<div class="product_offer">Offre exclusif B-Mobile</div>
								</div>
							</div>
							<div class="black_button add_to_cart_button mt-1"><a href="{{ path('app_enseigne', {'slug' : enseigne.slug}) }}">En savoir plus</a></div>
						</div>
				
						{% endfor %}
					
					</div>
				</div>
			</div>
				<div class="mt-3">
				{{ knp_pagination_render(enseignes, '_partials/_pagination.html.twig') }}
				</div>
		</div>
	</div>

	



	<!-- Benefit -->

	<div class="benefit mb-5">
		<div class="container">
			<div class="row benefit_row">
				<div class="col-lg-3 benefit_col">
					<div class="benefit_item d-flex flex-row align-items-center">
						<div class="benefit_icon"><i class="fa fa-truck" aria-hidden="true"></i></div>
						<div class="benefit_content">
							<h6>Livraison gratuite</h6>
							<p>Votre carte vous trouve partout au sénégal</p>
						</div>
					</div>
				</div>
				<div class="col-lg-3 benefit_col">
					<div class="benefit_item d-flex flex-row align-items-center">
						<div class="benefit_icon"><i class="fa fa-money" aria-hidden="true"></i></div>
						<div class="benefit_content">
							<h6>Bonus de bienvenue</h6>
							<p>Un bon cahs de bienvenue vous sera offert</p>
						</div>
					</div>
				</div>
				<div class="col-lg-3 benefit_col">
					<div class="benefit_item d-flex flex-row align-items-center">
						<div class="benefit_icon"><i class="fa fa-undo" aria-hidden="true"></i></div>
						<div class="benefit_content">
							<h6>30 days return</h6>
							<p>Satisfait ou rembourser</p>
						</div>
					</div>
				</div>
				<div class="col-lg-3 benefit_col">
					<div class="benefit_item d-flex flex-row align-items-center">
						<div class="benefit_icon"><i class="fa fa-clock-o" aria-hidden="true"></i></div>
						<div class="benefit_content">
							<h6>24/7 Service client</h6>
							<p>Ouvert toute la semaine</p>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
    {% endblock %}
